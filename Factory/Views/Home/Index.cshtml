@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Dr. Sillystringz's Factory</h1>

<h2>Engineers:</h2>
  @if(Model.Count == 0)
  {
    <p>No engineers have been added yet.</p>
  }
  else
  {
  @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink(engineer.Name, "Details", "Engineers", new { id = engineer.EngineerId })</li>
    }
  }

<h2>Machines:</h2>
  @if(ViewBag.AllMachines.Count == 0)
  {
    <p>No machines added yet.</p>
  }
  else
  {
  @foreach (Machine machine in ViewBag.AllMachines)
    {
      <li>@Html.ActionLink(machine.Name, "Details", "Machines", new { id = machine.MachineId })</li>
    }
  }

  @Html.ActionLink("Add a new engineer", "Create", "Engineers")<br>
  @Html.ActionLink("Add a new machine", "Create", "Machines")
